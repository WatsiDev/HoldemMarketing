---
interface Props {
    title: string;
    description: string;
    content: string[];
    price: string;
}
const { title, description, content, price } = Astro.props;
---
<div class="rounded-lg shadow-md overflow-hidden flex flex-col md:flex-row my-4">
    <!-- Columna 1: Imagen de fondo y título -->
    <div
      class="md:w-1/2 relative"
      style="background-image: url('Packages.jpg'); background-size: cover; background-position: center;"
    >
      <!-- Overlay para mejorar la legibilidad del título -->
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative h-full flex items-center justify-center p-6">
        <h2 class="text-3xl font-bold text-white">{title}</h2>
      </div>
    </div>

    <!-- Columna 2: Descripción, contenido del paquete y precio -->
    <div class="md:w-1/2 p-6 flex flex-col justify-center">
        <p class="mb-4">
          {description}
        </p>
        <ul class="list-disc list-inside mb-4">
          {content.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
        <div class="text-2xl font-bold">{price}</div>
      </div>
  </div>