---
interface Props {
  image: string;
  nombre: string;
  ocupacion: string;
}

const { image, nombre, ocupacion } = Astro.props;
---

<div
  class="bg-white text-black shadow-[0_2px_4px_rgba(0,0,0,0.1)] w-[200px] transition-transform duration-[0.3s,box-shadow] delay-[0.3s] relative rounded-lg hover:-translate-y-2.5 hover:shadow-[0_4px_8px_rgba(0,0,0,0.2)]"
>
  <div class="relative text-center p-4">
    <img src={image} alt={nombre} />
  </div>
  <div
    class="bg-[#f9f9f9] text-center p-4 border-t-[#ddd] border-t border-solid"
  >
    <p class="mx-0 my-1">{nombre}</p>
    <p>{ocupacion}</p>
  </div>
</div>
